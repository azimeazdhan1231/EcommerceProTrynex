# TryneX Lifestyle - Environment Variables Template
# Copy this file to .env.local for local development
# Set these variables in Netlify dashboard for production

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Configuration (Required for order notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# Site Configuration
NODE_ENV=production
SITE_URL=https://your-site.netlify.app

# Optional: Custom email settings
EMAIL_FROM_NAME=TryneX Lifestyle
EMAIL_REPLY_TO=your_email@gmail.com